@model CategoryVM
@{
    ViewData["Title"] = "CategoryList";
}

@TempData["message"]

@if (Model.Categories.Count ==0)
{
    <div>
        Henuz bir kategori eklenmemis.. Kategori eklemek icin   <a asp-action="AddCategory" asp-controller="Category">tıklayınız
        </a>
    </div>
}
            else
            {
                <div class="panel panel-primary"> 
                    <div class="panel panel-body">
                       <table class="table table-hover">
                           <tr>
                               <th>
                                   Kategori İsmi</th>
                               <th>Kategori Açıklaması
                                   </th>
                               <th>Islemler</th></tr>
                           @foreach (Category item in Model.Categories)
                           {
                               <tr>
                                   <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td><a asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.ID">Güncelle</a></td>
                                    <td><a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.ID">Sil</a></td>
                               </tr>
                           }


                           </table> 
                        </div>
                </div>
            }

